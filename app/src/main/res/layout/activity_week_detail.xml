<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_week_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayankgupta.pregnancy.WeekDetailActivity">


    <ImageView
        android:id="@+id/week_image"

        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="@color/week_1_background"

        android:scaleType="fitCenter"

        />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textSize="20sp"
        android:text="During the first week"/>


</LinearLayout>
